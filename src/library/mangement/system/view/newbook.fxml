<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/dark-theme.css" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.mangement.system.controller.NewbookController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <JFXTextField fx:id="idField" focusColor="#ffff8d" labelFloat="true" promptText="Book ID" style="-fx-text-fill: #b2b2b2;" unFocusColor="#b2b2b2" />
            <JFXTextField fx:id="titleField" focusColor="#ffff8d" labelFloat="true" layoutX="10.0" layoutY="10.0" promptText="Book Title" style="-fx-text-fill: #b2b2b2;" unFocusColor="#b2b2b2" />
            <JFXTextField fx:id="authorField" focusColor="#ffff8d" labelFloat="true" layoutX="10.0" layoutY="10.0" promptText="Author" style="-fx-text-fill: #b2b2b2;" unFocusColor="#b2b2b2" />
            <JFXTextField fx:id="publisherField" focusColor="#ffff8d" labelFloat="true" layoutX="10.0" layoutY="47.0" promptText="Publisher" style="-fx-text-fill: #b2b2b2;" unFocusColor="#b2b2b2" />
            <HBox alignment="CENTER" prefHeight="200.0" prefWidth="200.0" spacing="25.0">
               <children>
                  <JFXButton fx:id="saveBtn" onAction="#saveBook" prefHeight="100.0" prefWidth="200.0" styleClass="custom-Button" text="Save" />
                  <JFXButton fx:id="cancelBtn" onAction="#closeWindow" prefHeight="100.0" prefWidth="200.0" styleClass="custom-Button" text="Cancel" />
               </children></HBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
